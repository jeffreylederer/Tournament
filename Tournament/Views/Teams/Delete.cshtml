@model Tournament.Models.Team

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}

<h2>Delete</h2>
<div class="validation-summary-errors text-danger">@ViewBag.Error</div>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DivisionId)
        </dt>
       @{
           if ((int)ViewBag.NumberDivisions > 1)
           {
                <dd>
                    @Html.DisplayFor(model => model.DivisionId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TeamNo)
                </dt>
           }
        }

        <dd>
            @Html.DisplayFor(model => model.TeamNo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Skip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Player.Membership.FullName)
        </dd>
        @{
            if ((int)ViewBag.TeamSize > 2)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ViceSkip)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Player1.Membership.FullName)
                </dd>
            }
        }
        @{
            if ((int)ViewBag.TeamSize > 1)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Lead)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Player2.Membership.FullName)
                </dd>
            }
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.rowversion)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { id = Model.Leagueid })
        </div>
    }
</div>
