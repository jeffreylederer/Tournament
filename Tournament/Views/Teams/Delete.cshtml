@model Tournament.Models.Team

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    <span style="color: red;">@ViewBag.Error</span>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeamNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeamNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Player.FullName)
        </dd>
    @{
        if ((int) ViewBag.TeamSize > 2)
        {
            <dt>
                @Html.DisplayNameFor(model => model.ViceSkip)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player1.FullName)
            </dd>
        }
    }
    @{
        if ((int) ViewBag.TeamSize > 1)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Lead)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Player2.FullName)
            </dd>
        }
    }

        </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
