@model Tournament.Models.Player

@{
    ViewBag.Title = "Create";
}

<h2>Add a Player</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@HttpContext.Current.Session["LeagueName"].ToString()</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.Leagueid)
        <div class="form-group">
            @Html.LabelFor(model => model.MembershipId, "Player", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model=>model.MembershipId, new SelectList(ViewBag.List, "id", "FullName"), "--Select Player--",  htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MembershipId, "", new { @class = "text-danger" })
            </div>
        </div>

       
        
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
