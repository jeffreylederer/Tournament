@model Tournament.Models.PlayoffMatch

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LeagueLayout.cshtml";
}

<h2>Create Playoff Match</h2>
<div class="validation-summary-errors text-danger">@ViewBag.Error</div>

<h4>Match</h4>

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.WeekId)
    @Html.HiddenFor(model => model.LeagueId)
    @Html.HiddenFor(model => model.GameDate)


    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GameDate, "GameDate", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.GameDate
            </div>
        </div>

          <div class="form-group">
            @Html.LabelFor(model => model.TeamNo1, "TeamNo1", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TeamNo1, new SelectList(ViewBag.List, "Value", "Text"), Model.TeamNo1.ToString(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeamNo1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TeamNo2, "TeamNo2", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TeamNo2, new SelectList(ViewBag.List, "Value", "Text"), Model.TeamNo2.ToString(), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeamNo2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
}



<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.LeagueId })
</div>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $("body").on("change", "#ddlDivisions", function () {
        $("#hfFruitName").val($(this).find("option:selected").text());
        document.forms["Form1"].submit();
    });
</script>

