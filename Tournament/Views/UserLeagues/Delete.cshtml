@model Tournament.Models.UserLeague

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<div class="validation-summary-errors text-danger"><ul><li>@ViewBag.Error</li></ul></div>
<p class="error">@ViewBag.ConcurrencyErrorMessage</p>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UserLeague</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Roles)
        </dt>

        <dd>
            @{var role =  string.IsNullOrWhiteSpace(Model.Roles)?"Observer": Model.Roles;}
            @role
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.League.LeagueName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.League.LeagueName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.username)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.rowversion)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new {id=Model.LeagueId })
        </div>
    }
</div>
